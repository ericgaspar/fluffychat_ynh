    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/hydrogen",
                "default": "/hydrogen"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            }
        ]
    }
